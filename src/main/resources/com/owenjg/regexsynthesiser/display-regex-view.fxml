<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.owenjg.regexsynthesiser.controller.DisplayRegexController" spacing="20" alignment="CENTER">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label fx:id="titleText" styleClass="title" text="Generated Regular Expression"/>
    <Label fx:id="generatedRegexLabel" styleClass="subtitle" text="Generated Regular Expression will appear here" />
    <Label fx:id="elapsedTimeText" styleClass="status-label" text="" />

    <Button text="Export Positive and Negative examples" styleClass="button" onAction="#onExportButtonClick"/>
    <Button text="Copy Regex" styleClass="button secondary" onAction="#onCopyButtonClick"/>
    <Button text="Back" styleClass="button danger" onAction="#onBackButtonClick"/>

    <Label fx:id="statusText" styleClass="status-label" text="" />


</VBox>